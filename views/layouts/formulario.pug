doctype html
html(lang='es')
 head
    title="Entregable Clase 11 con PugJS"

    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")

    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"
        integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous")
 
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
        integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
        crossorigin="anonymous")

    link(rel="stylesheet" href="/style.css" type="text/css")

 body
    h2="Ingresar Productos"

    form(class="jumbotron" action="/api/productos/guardar" method="POST")
        div(class="form-group") 
            label(for="title")="Nombre del producto"
            input(type="text" class="form-control" name="title" placeholder="Nombre")
        div(class="form-group") 
            label(for="price")="Precio"
            input(type="number" class="form-control" name="price" placeholder="Precio")
        div(class="form-group")
            label(for="thumbnail")="URL de la imagen"
            input(type="url" class="form-control" name="thumbnail" placeholder="URL")
        button(type="submit" class="btn btn-primary")="Enviar"